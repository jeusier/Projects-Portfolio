doctype html
html
  head
    title= pageTitle
    link(rel="stylesheet", href="/stylesheets/styles.css")
    link(rel="stylesheet", href="/stylesheets/normalize.css")
    link(rel="stylesheet", href="/stylesheets/screen.css", media="screen, projection", type="text/css")
    link(rel="stylesheet", href="/stylesheets/print.css", media="print", type="text/css")
    script(src='/javascripts/modernizr.js')    
  body
    block content
        main.clearfix
            aside.sidebar
                .my-info
                    img.portfolio-image(src="http://placekitten.com.s3.amazonaws.com/homepage-samples/200/286.jpg", alt="Jason Piros")
                    h1 Jason Piros
                    h2 Web Developer
                        | Based in Honolulu, HI
                    .social.clearfix
                        a.linkedin(href="http://linkedin.com" target="_blank") LinkedIn
                        a.github(href="http://github.com" target="_blank") Github
                    if admin === 'jcurray'
                        a(href='/logout')
                            div.admin-buttons Logout
                        a(href='/projects/add')
                            div.admin-buttons Add Project
                        a(href='/about/add-skill')
                            div.admin-buttons Add Skill
                        a(href='/about/add-experience')
                            div.admin-buttons Add Experience
                        a(href='/about/add-education')
                            div.admin-buttons Add Education
                nav.menus
                    h3.work Work
                        span.work
                    ul
                        li
                            a(href='/projects') Latest Projects
                        li
                            a(href='/projects/Personal') Personal Projects
                        li
                            a(href='/projects/Client') Client Projects
                    h3.about About
                        span.about
                    ul
                        li
                            a(href='/about/#skills') Skills
                        li
                            a(href='/about/#experience') Experience
                        li
                            a(href='/about/#education') Education
                    h3.contact Contact
                        span.contact
                    ul
                        li jason.piros@gmail.com
            block mainContent
        script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js')
        script(src='/javascripts/javascript.js')

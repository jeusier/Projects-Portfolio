extends layout

block mainContent
    div.content
        article.portfolio-item.clearfix
            header.portfolio-info
                div.name Add Education
            figure.portfolio-image.clearfix
                form(role="form" id='create-education' action='/about' method='post' class="validate")
                    div
                        label(for="header") School Name 
                        input(type="text" id="header" name="header" placeholder="Enter School Name" autofocus)
                    div
                        label(for="subheader") Degree or School Type 
                        input(type="text" id="subheader" name="subheader" placeholder="Enter degree or school type")
                    div
                        label(for="description") Description 
                        textarea(name="description" id="description" rows=15 placeholder="Enter School Description")
                    button(type="submit") Add Education